<body>
    <h1>Welcome to Simple ChatGPT</h1>
    <button class="start" onclick="startChat()">Start Chat</button>
    <button class="reset" onclick="resetChat()">Reset</button>

    <div id="chat"></div>
    <div id="input-container">
        <input type="text" id="user-input" placeholder="Type your message...">
        <button id="send" onclick="sendMessage()">Send</button>
    </div>

    <script>
        const chatBox = document.getElementById('chat');
        const inputContainer = document.getElementById('input-container');
        const userInput = document.getElementById('user-input');

        function startChat() {
            chatBox.style.display = 'block';
            inputContainer.style.display = 'flex';
            chatBox.innerHTML = '<p><strong>ChatGPT:</strong> Hello! How can I assist you today?</p>';
        }

        function resetChat() {
            chatBox.style.display = 'none';
            inputContainer.style.display = 'none';
            chatBox.innerHTML = '';
            userInput.value = '';
        }

        function sendMessage() {
            const userMessage = userInput.value.trim();
            if (userMessage === '') return;

            // Display user's message
            chatBox.innerHTML += `<p><strong>You:</strong> ${userMessage}</p>`;
            userInput.value = '';

            // Simulate ChatGPT response (replace this with actual API call)
            setTimeout(() => {
                chatBox.innerHTML += `<p><strong>ChatGPT:</strong> ${generateResponse(userMessage)}</p>`;
                chatBox.scrollTop = chatBox.scrollHeight;
            }, 1000);
        }

        function generateResponse(message) {
            // Simple simulated response logic
            return `You said: "${message}". How can I help further?`;
        }
    </script>
</body>
</html>
