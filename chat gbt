            border-radius: 5px;
            cursor: pointer;
        }
        button.start {
            background-color: #007bff;
            color: white;
        }
        button.reset {
            background-color: #ff4b5c;
            color: white;
        }
        #chat {
            width: 80%;
            max-width: 600px;
            height: 400px;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 10px;
            overflow-y: auto;
            display: none;
